<%- include('header'); -%>
    <div class="box" id="heading"><h1> <%= val %>  </h1>
    </div>
    <div class="box">
          
            <% for(let i=0;i<item.length;i++){ %>
                <form action="/delete" method="post">
                <div class="item">
                <input type="checkbox" onChange="this.form.submit()" name="box" value=<%=item[i]._id%>>
                <p> <%=item[i].name %> </p>
                <input type="hidden" name="del" value=<%= delList%>>
            </div>
        </form>
           <% }  %>
         
          <form class="item" action="/" method="post">
            <input type="text" placeholder="New Item" name="todo" autocomplete="off">
            <button type="submit" name="add" value=<%=value%>>+</button>
        </form>
       
    </div>
    <%- include('footer'); -%>